<resources>

    <style name="Widget.Theme.SintoApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.SintoApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/rosa</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Notificaciones" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/rojiso</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlHighlight">@color/rojiso_claro</item>
        <item name="android:navigationBarColor">@color/light_blue_900</item>
    </style>
</resources>